{% extends "::base.html.twig" %}


{% block body %}
    <h2 align="center"> List of all Your Mails :</h2>

    <br>
    {% block button_add_new2 %}
        <form align="center" action="{{ path('app_mail_new') }}">
            <input type="submit" value="Add new Mail"></form>
        <br>
    {% endblock%}
    <br>
    {% for mail in mails %}
        <p align="center"> ______________________________ </p>
        <p align="center">
            {{ mail.mail }} {{ mail.description }}
        </p>

            <div>
                <span>
                    <form align="center" action="{{ path('app_mail_delete', {"id":mail.id}) }}" method="POST">
                        <input name="_method" type="hidden" value="DELETE">
                        <input style="background-color: #C82829" type="submit" value="Delete">
                     </form>
               </span>
               <span>
                    <form align="center" action="{{ path("app_mail_showone", {"id":mail.id}) }}">
                        <input style="background-color: #ffcc00" type="submit" value="Show mail details">
                    </form>
                </span>
        </div>

    {% endfor %}
    <p>
    <br>
        <form align="center" action="{{ path('app_general_welcome') }}">
            <input style="background-color: cadetblue; font-weight: bold" type="submit" value="Main Page">
        </form>
    </p>
{% endblock %}
