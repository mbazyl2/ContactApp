{% extends "::base.html.twig" %}


{% block body %}
    <h2 align="center"> List of all Your addresses :</h2>
    <br>
    <br>
    {% for address in addresses %}
        <p align="center"> ______________________________ </p>
        <p align="center">
            {{ address.street }} {{ address.number }}, city: {{ address.city }}
        </p>

            <div>
                <span>
                    <form align="center" action="{{ path('app_address_delete', {"id":address.id}) }}" method="POST">
                        <input name="_method" type="hidden" value="DELETE">
                        <input style="background-color: #C82829" type="submit" value="Delete">
                     </form>
               </span>
               <span>
                    <form align="center" action="{{ path("app_address_showone", {"id":address.id}) }}">
                        <input style="background-color: #ffcc00" type="submit" value="Show address details">
                    </form>
                </span>
        </div>

    {% endfor %}
    <p>
    <br>
        <form align="center" action="{{ path('app_general_welcome') }}">
            <input style="background-color: cadetblue; font-weight: bold" type="submit" value="Main Page">
        </form>
    </p>
{% endblock %}
